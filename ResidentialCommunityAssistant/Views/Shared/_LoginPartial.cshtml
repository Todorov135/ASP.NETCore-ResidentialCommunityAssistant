@using Microsoft.AspNetCore.Identity
@inject SignInManager<ExtendedUser> SignInManager
@inject UserManager<ExtendedUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        if (this.User.IsInRole("StoreManager"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="ShopAdministrator" asp-controller="ShopМanagement" asp-action="Index" title="Manage">Администрация на магазин</a>
            </li>
        }      

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="ShoppingCard" title="Manage">Количка</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
