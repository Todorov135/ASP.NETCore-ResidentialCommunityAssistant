@model AddressViewModel

<h2>Address search</h2>
<p>Търсене на сграда</p>
<form asp-controller="Home" asp-action="AddressSearch" method="post">
    <div class="form-group">
        <input type ="hidden" asp-for="Id">
        <div class="form-group">
            <label asp-for="CityName"></label>
            <input type="text" asp-for="CityName" placeholder="София">
            <span asp-validation-for="CityName" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AddressName"></label>
            <input type="text" asp-for="AddressName" placeholder="Демокрация">
            <span asp-validation-for="AddressName" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Number"></label>
            <input type="text" asp-for="Number" placeholder="78Б">
            <span asp-validation-for="Number" class="small text-danger"></span>
        </div>
        <input type="submit" value="Търсене">
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
