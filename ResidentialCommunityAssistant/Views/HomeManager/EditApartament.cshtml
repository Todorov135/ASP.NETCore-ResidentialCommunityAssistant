@model ApartamentViewModel
<h2>Edit Apartament</h2>

<div>
    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.Signature?"></label>
            <input asp-for="@Model.Signature?" class="form-control" placeholder="1-(номер на ап.), А-(номер на ап.)">
            <span asp-validation-for="@Model.Signature?" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Number"></label>
            <input asp-for="@Model.Number" class="form-control" placeholder="3" type="number">
            <span asp-validation-for="@Model.Number" class="small text-danger"></span>
        </div>   
        <input type="hidden" asp-for="ApartamentId"/>
        <div class="text-center">
            <input class="btn btn-primary mt-3" type="submit" value="Промени" />
        </div>        
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}