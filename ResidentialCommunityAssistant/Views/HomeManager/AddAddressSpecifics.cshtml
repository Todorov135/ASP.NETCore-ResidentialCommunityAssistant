@model AllApartamentsToAddViewModel
@{
    int addressId = 0;
}
<h2>Address specifics</h2>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        @foreach (var apartament in Model.AllAddedApartaments)
        {
            <div class="form-group border">
                <div class="form-group">
                    <p>Апартамент: @apartament.Signature</p>
                    <p>Номер: @apartament.Number</p>
                </div>
            </div>
            if (Model.AddressId!=0)
            {
                continue;
            }
            else
            {
                Model.AddressId = apartament.AddressId;
            }
        }

        <form method="post">           
            <div class="form-group">
                <label asp-for="@Model.CurrentApartamentToAdd.Signature?"></label>
                <input asp-for="@Model.CurrentApartamentToAdd.Signature?" class="form-control" placeholder="1-(номер на ап.), А-(номер на ап.)">
                <span asp-validation-for="@Model.CurrentApartamentToAdd.Signature?" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CurrentApartamentToAdd.Number"></label>
                <input asp-for="@Model.CurrentApartamentToAdd.Number" class="form-control" placeholder="3" type="number">
                <span asp-validation-for="@Model.CurrentApartamentToAdd.Number" class="small text-danger"></span>
            </div>
           @*TODO: To make screen follow input for better UI*@
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Добави" />
            </div>
            
            <div class="text-center">
                <a asp-controller="Owner" asp-action="AllApartaments" asp-route-givenAddressId="@addressId" class="btn btn-primary mt-3">Приключих с въвеждането</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
